<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="删除元素测试按钮"/>
    <TextView
        android:id="@+id/more_explore_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="探索更多"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/more_explore_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/more_explore_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <!--<com.zd.study.autoscrollview.AutoScrollViewPager
        android:id="@+id/auto_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/more_explore_title"
        app:layout_constraintLeft_toLeftOf="parent"/>-->
</androidx.constraintlayout.widget.ConstraintLayout>