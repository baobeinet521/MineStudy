<?xml version="1.0" encoding="utf-8"?>

<!-- res/drawable/background_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 当按钮被按下时使用这个图像 -->
    <item android:drawable="@drawable/background_pressed" android:state_pressed="true" />
    <!-- 当按钮是焦点状态时使用这个图像 -->
    <item android:drawable="@drawable/background_default" android:state_focused="true" />
    <!-- 默认的背景图像 -->
    <item android:drawable="@drawable/background_default" />
</selector>